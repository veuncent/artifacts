@model Artifacts.Models.ViewModels.BlogPostViewModel

@{
    ViewBag.Title = "Create";
}

<form asp-controller="BlogPosts"
      asp-action="Create"
      asp-route-returnurl="@ViewData["ReturnUrl"]"
      method="post"
      enctype="multipart/form-data"
      class="form-horizontal">

    <h2>Create</h2>

    <div asp-validation-summary="All" class="text-danger"></div>

    @Html.Partial("_BlogPostEditMain")

</form>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @{ await Html.RenderPartialAsync("_BlogEditScriptsPartial"); }
    @{ await Html.RenderPartialAsync("_BlogEditStylePartial"); }
}